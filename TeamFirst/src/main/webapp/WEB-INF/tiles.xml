<!-- 이후 홈페이지/ 프로그램 /웹 세단계로 나누어야 함 -->
<!--  홈페이지 : header=메뉴, content=기본컨텐츠, footer=기타정보 -->
<!--  프로그램 : header=타이틀, side=메뉴, content=기본컨텐츠 -->
<!-- 앱 : header=메뉴, content=기본컨텐츠 -->


<!-- 
ex)
<definition name="homepage/*" extends="sample-template">
<definition name="app/*" extends="sample-template">
가 있을 시에

자바 ★controller★ 단에서 ★return★ 값을 다르게 준다면

ex)
return "homepage/sample";
return "app/sample";

각각 다른 layout 적용이 가능하다 


-->


	<definition name="mainTemplate"
		template="/WEB-INF/views/tiles/layout.jsp">
		<put-attribute name="content"
			value="/WEB-INF/views/home.jsp" />
		<put-attribute name="header"
			value="/WEB-INF/views/tiles/header.jsp" />
		<put-attribute name="side"
			value="/WEB-INF/views/tiles/side.jsp" />
		<put-attribute name="footer"
			value="/WEB-INF/views/tiles/footer.jsp" />
	</definition>

<!-- 레이아웃 컨텐츠 칸에 views/?/?.jsp 페이지를 삽입 -->
	<definition name="*/*" extends="mainTemplate">
		<put-attribute name="content"
			value="/WEB-INF/views/{1}/{2}.jsp" />
	</definition>

<!-- 레이아웃 컨텐츠 칸에 views/?.jsp 페이지를 삽입 -->
	<definition name="*" extends="mainTemplate">
		<put-attribute name="content"
			value="/WEB-INF/views/{1}.jsp" />

	</definition>

</tiles-definitions>