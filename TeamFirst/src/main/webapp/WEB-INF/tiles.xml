<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles
Configuration 2.1//EN"
"http://tiles.apache.org/dtds/tiles-config_2_1.dtd">
<tiles-definitions>

<!-- <definition name="home" template="/WEB-INF/views/home.jsp" /> -->
<!-- <definition name="home" template="/WEB-INF/views/main/main.jsp" /> -->

	<definition name="mainTemplate" template="/WEB-INF/views/tiles/layout.jsp">
		<put-attribute name="content" value="/WEB-INF/views/top.jsp" />
	</definition>
	
	<definition name="*/*" extends="mainTemplate">
		<put-attribute name="content" value="/WEB-INF/views/{1}/{2}.jsp" />
	</definition>
	
	<definition name="*" extends="mainTemplate">
		<put-attribute name="content" value="/WEB-INF/views/{1}.jsp" />
	
	<put-attribute name="header" value="/WEB-INF/views/tiles/header.jsp" />
	<put-attribute name="side" value="/WEB-INF/views/tiles/side.jsp" />
	<put-attribute name="footer" value="/WEB-INF/views/tiles/footer.jsp" />
	</definition>
	
</tiles-definitions>